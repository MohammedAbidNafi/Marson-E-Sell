<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".conatct"
    xmlns:ads="http://schemas.android.com/apk/res-auto">
<!--
    <WebView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/contactview"/>
-->
   <ImageView
       android:layout_width="350dp"
       android:id="@+id/whatsapp"
       android:layout_height="150dp"
       android:layout_centerHorizontal="true"
       android:src="@drawable/whatsapp"
       android:layout_below="@+id/Contactus"
       android:layout_marginTop="30sp"
       android:onClick="whatsapp"

       />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Contactus"
        android:text="Contact Us"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textSize="50dp"
        android:textStyle="bold"
        android:textColor="#000"/>

    <ImageView
        android:layout_width="400dp"
        android:layout_height="130dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/whatsapp"
        android:src="@drawable/phone"
        android:layout_centerHorizontal="true"
        android:id="@+id/callbutton"
        android:onClick="call">

    </ImageView>






    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Found a bug? Email us"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/callbutton"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:textSize="36dp"
        android:id="@+id/Bugtext"/>

 <ImageView
     android:layout_width="383dp"
     android:layout_height="126dp"
     android:layout_below="@id/Bugtext"
     android:layout_centerHorizontal="true"
     android:layout_marginTop="25dp"
     android:onClick="mail"
     android:src="@drawable/email" />




 <com.google.android.gms.ads.AdView
     android:id="@+id/adView"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_centerHorizontal="true"
     android:layout_alignParentBottom="true"
     ads:adSize="BANNER"
     ads:adUnitId="@string/banner_ad_unit_id">
 </com.google.android.gms.ads.AdView>





</RelativeLayout>